<!-- views/cars/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cars Index</title>
  </head>
  <body>
    <h1>All Cars</h1>

      <ol>
      <% cars.forEach(car => { %>
        <li><a href="/cars/<%= car._id %>">CAR BRAND: <%=car.brand%> , CAR MODEL: <%= car.model %> , CAR YEAR: <%= car.year %> </a></li>
        <br>
      <% }); %>
      </ol>

      <a href="/cars/new">Add New Car</a>


  </body>
</html>
